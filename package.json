{
  "name": "vscode-azog-language-features",
  "description": "vscode language features for .azog files",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.31.0",
    "node": "^10.2.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "xml",
        "configuration": "./src/language-configuration.json"
      }
    ],
    "configuration": {
      "title": "XmlComplete",
      "type": "object",
      "properties": {
        "xmlComplete.formattingStyle": {
          "description": "Defines if attributes should be single line or not.",
          "type": "string",
          "enum": [
            "singleLineAttributes",
            "multiLineAttributes",
            "fileSizeOptimized"
          ],
          "scope": "resource",
          "default": []
        }
      }
    }
  },
  "scripts": {
    "prepublish": "tsc -p ./src",
    "compile": "tsc -p ./src",
    "tslint": "tslint ./src/**/*.ts",
    "watch": "tsc -w -p ./src",
    "test": "mocha -u tdd ./out/tests/; node_modules/.bin/mocha --require jsdoctest out/extension.js",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "package": "vsce package",
    "publish": "vsce publish",
		"release": "standard-version",
		"build-lib": "tsc -p ./lib/tsconfig.json"
  },
  "dependencies": {
    "get-uri": "2.0.3",
    "rxjs": "^6.5.2",
    "sax": "1.2.4"
  },
  "devDependencies": {
    "@types/mocha": "5.2.6",
    "@types/node": "10.12.27",
    "@types/sax": "^1.2.0",
    "jsdoctest": "1.7.1",
    "standard-version": "6.0.1",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "vsce": "1.61.0",
    "vscode": "^1.1.34"
  }
}
